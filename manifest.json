{
  "manifest_version": 2,

  "name": "Medium Post Link Formatter",
  "description": "This extension will format links to posts on Medium",
  "version": "1.0",

  "browser_action": {
   "default_popup": "popup.html",
   "default_title": "Click me to get a link"
  },
  "permissions": [
  "activeTab",
  "webNavigation",
  "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
